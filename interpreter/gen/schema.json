{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Program",
  "type": "object",
  "required": [
    "chunks"
  ],
  "properties": {
    "chunks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/ProgramChunk"
      }
    }
  },
  "definitions": {
    "Expression": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "statement"
          ],
          "properties": {
            "statement": {
              "$ref": "#/definitions/Statement"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "textLiteral"
          ],
          "properties": {
            "textLiteral": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "numberLiteral"
          ],
          "properties": {
            "numberLiteral": {
              "type": "number",
              "format": "double"
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "FunctionContentPart": {
      "oneOf": [
        {
          "type": "object",
          "required": [
            "text"
          ],
          "properties": {
            "text": {
              "type": "string"
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": [
            "input"
          ],
          "properties": {
            "input": {
              "type": "object",
              "required": [
                "placeholder"
              ],
              "properties": {
                "placeholder": {
                  "type": "string"
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "FunctionInterface": {
      "type": "object",
      "required": [
        "content"
      ],
      "properties": {
        "content": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/FunctionContentPart"
          }
        }
      }
    },
    "ProgramChunk": {
      "type": "object",
      "required": [
        "statements"
      ],
      "properties": {
        "statements": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Statement"
          }
        }
      }
    },
    "Statement": {
      "type": "object",
      "required": [
        "arguments",
        "interface"
      ],
      "properties": {
        "arguments": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Expression"
          }
        },
        "interface": {
          "$ref": "#/definitions/FunctionInterface"
        }
      }
    }
  }
}